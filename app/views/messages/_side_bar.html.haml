.chat-side
  .chat-side__header
    .chat-side__header__box
      %p.chat-side__header__box__username
        = current_user.name
      %ul.chat-side__header__box__icon-menu
  
        %li.chat-side__header__box__icon-menu__new-groups
          = link_to new_group_path class: "new_group" do
            = icon('fas', 'pen-square', class: 'icon')
        %li.chat-side__header__box__icon-menu__edit-user
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
    
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          %p.group__name
            = group.name
          %P.group__message
            = group.show_last_message





 
